<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue2</item>
        <item name="colorPrimaryDark">@color/colorPrimary1C</item>
        <item name="colorAccent">@color/colorAccentD7</item>
        <!--overlay-->
        <item name="android:windowContentOverlay">@null</item>
        <!--app color-->
        <item name="android:textColorPrimary">@color/colorPrimaryFB</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_chevron_left_black_24dp</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/gray3</item>
        <item name="colorOnPrimary">#0000ff</item>
    </style>

    <style name="ThemeOverlay.App.DeleteMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/DeleteButton</item>
    </style>
    <style name="DeleteButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/error</item>
    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue1</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/blue2</item>
        <!-- arrow bordercolor(<>)-->
<!--        <item name="android:selectableItemBackgroundBorderless">@color/colorAccentD7</item>-->
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/blue2</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/Black</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/blue2</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/dark1</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/dark3</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/dark3</item>

    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="AppTheme"></style>

    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ToolbarLeftIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/ripple_effect_raise</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="ToolbarRightFilterIcon">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:padding">11dp</item>
        <item name="android:background">@drawable/ripple_effect_dark3</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="ToolbarRightRecycleIcon">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:padding">9dp</item>
        <item name="android:background">@drawable/ripple_effect_dark3</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="ButtonCreatorResultAction" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextPoppinsMedium.Size14.Weight400</item>
        <item name="shapeAppearance">@style/Rounded</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">7dp</item>
        <item name="iconTint">@null</item>

    </style>

    <style name="ButtonSaveImage" parent="ButtonCreatorResultAction">
        <item name="backgroundTint">@color/blue2</item>
        <item name="icon">@drawable/ic_save</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonShareImage" parent="ButtonCreatorResultAction">
        <item name="backgroundTint">@color/white</item>
        <item name="icon">@drawable/ic_share_blue</item>
        <item name="strokeColor">@color/blue2</item>
        <item name="strokeWidth">@dimen/_1sdp</item>

    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="NotifySaveImage" parent="ButtonCreatorResultAction">
        <item name="backgroundTint">@color/success1</item>
        <item name="icon">@drawable/ic_checked_1</item>
        <item name="iconGravity">start</item>
        <item name="android:textColor">@color/dark1</item>
    </style>

    <style name="BaseInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/dark4</item>
        <item name="helperTextTextColor">@color/error</item>
        <item name="android:textColor">@color/dark2</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorIconDrawable">@null</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="ButtonAddNewField" parent="ButtonCreatorResultAction">
        <item name="backgroundTint">@color/blue4</item>
        <item name="icon">@drawable/ic_add_circle</item>
        <item name="iconGravity">start</item>
        <item name="android:textColor">@color/blue1</item>
        <item name="iconTint">@color/blue3</item>

    </style>

    <style name="InputFieldStyle" parent="TextNotoStyle.TextLargeBold">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_radius_edit_text</item>
        <item name="android:maxLength">255</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
