<resources>

    <!-- Base application theme. -->
    <style name="AppCommonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Button Style-->
    <style name="Widget.MaterialButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextNotoStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorDark1</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextNotoStyle2">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorDark2</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextErrorStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/error</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextNotoStyle.TextH1">
        <item name="android:textSize">@dimen/font_size_h1</item>
    </style>

    <style name="TextNotoStyle.TextH2">
        <item name="android:textSize">@dimen/font_size_h2</item>
    </style>

    <style name="TextNotoStyle.TextH3">
        <item name="android:textSize">@dimen/font_size_h3</item>
    </style>

    <style name="TextNotoStyle.TextH4">
        <item name="android:textSize">@dimen/font_size_h4</item>
    </style>

    <style name="TextNotoStyle.TextH5">
        <item name="android:textSize">@dimen/font_size_h5</item>
    </style>

    <style name="TextNotoStyle.TextH6">
        <item name="android:textSize">@dimen/font_size_h6</item>
    </style>

    <style name="TextNotoStyle.Body1">
        <item name="android:textSize">@dimen/font_size_x_large</item>
    </style>

    <style name="TextNotoStyle.Body2">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextNotoStyle.TextXXLarge">
        <item name="android:textSize">@dimen/font_size_xx_large</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextNotoStyle.TextXLarge">
        <item name="android:textSize">@dimen/font_size_x_large</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextNotoStyle.TextLarge">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextNotoStyle.TextLargeBold">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextNotoStyle.TextNormal">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextNotoStyle2.TextNormal">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="TextNotoStyle2.TextLarge">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="TextErrorStyle.TextNormal">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="fontWeight">400</item>
    </style>


    <style name="ButtonPrimary">
        <item name="android:textColor">@color/button_primary_color</item>
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textAppearance">@style/TextNotoStyle.Body1</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:textColor">@color/button_secondary_color</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
        <item name="android:textAppearance">@style/TextNotoStyle.Body1</item>
    </style>

    <style name="ButtonTertiary">
        <item name="android:textColor">@color/button_secondary_color</item>
        <item name="android:background">@drawable/button_tertiary_bg</item>
        <item name="android:textAppearance">@style/TextNotoStyle.TextXXLarge</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="ButtonGooglePrimary">
        <item name="android:textColor">@color/button_primary_color</item>
        <item name="android:background">@drawable/button_primary_google_bg</item>
        <item name="android:textAppearance">@style/TextNotoStyle.Body1</item>
    </style>

    <style name="Widget.QrCode.Button.Outline"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextPoppinsMedium">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorDark1</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextPoppinsMedium.Size12">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="TextPoppinsMedium.Size14">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextPoppinsMedium.Size16">
        <item name="android:textSize">@dimen/font_size_x_large</item>
    </style>

    <style name="TextPoppinsMedium.Size18">
        <item name="android:textSize">@dimen/font_size_xx_large</item>
    </style>

    <style name="TextPoppinsMedium.Size12.Weight600">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextLabelResultScan" parent="TextPoppinsMedium.Size12.Weight600">
        <item name="android:textColor">@color/blue2</item>
    </style>

    <style name="TextPoppinsMedium.Size12.Weight400">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextPoppinsMedium.Size14.Weight400">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextPoppinsMedium.Size14.Weight500">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ErrorTextNotFound" parent="TextPoppinsMedium.Size14.Weight400">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="TextLabelProductInfo" parent="TextPoppinsMedium.Size14.Weight400">
        <item name="android:textColor">@color/colorDark2</item>
    </style>

    <style name="TextPoppinsMedium.Size16.Weight600">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="PrefixTextFooter">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorDark2</item>
        <item name="android:textSize">@dimen/font_size_x_large</item>
    </style>

    <style name="ContentTextFooter" parent="TextPoppinsMedium.Size12.Weight400" >
        <item name="android:textColor">@color/colorDark2</item>
    </style>

    <style name="BaseRadioButtonCustomer" parent="TextPoppinsMedium.Size14.Weight400">
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RadioButtonWifi" parent="BaseRadioButtonCustomer">
        <item name="android:background">@drawable/radio_selector_wifi</item>
        <item name="android:textColor">@drawable/radio_text_color_wifi</item>
    </style>

    <style name="RadioButtonStudio" parent="BaseRadioButtonCustomer">
        <item name="android:background">@drawable/radio_selector_studio</item>
        <item name="android:textColor">@drawable/radio_text_color_studio</item>
    </style>

    <style name="ButtonCreator">
        <item name="android:background">@drawable/button_create_bg</item>
        <item name="android:textAppearance">@style/TextPoppinsMedium.Size14.Weight500</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TextViewErrorField" parent="TextPoppinsMedium.Size14.Weight400">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/White</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialog_button.negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialog_button.positive</item>
    </style>

    <style name="dialog_button">
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="dialog_button.negative">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@color/button_negative_color</item>
    </style>

    <style name="dialog_button.positive">
        <item name="android:textColor">@color/button_positive_color</item>
    </style>
</resources>
